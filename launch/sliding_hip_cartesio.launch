<launch>

    <arg name="prefix" default=""/>
    <arg name="gui" default="true"/>

    <param name="model_description/robot_description"
        textfile="$(find awesome_leg_pholus)/description/urdf/awesome_leg_complete.urdf"/>

    <param name="model_description/robot_description_semantic"
        textfile="$(find awesome_leg_pholus)/description/srdf/awesome_leg_complete.srdf"/>

    <param name="robot_description"
        textfile="$(find awesome_leg_pholus)/description/urdf/awesome_leg.urdf"/>

    <param name="robot_description_semantic"
        textfile="$(find awesome_leg_pholus)/description/srdf/awesome_leg.srdf"/>

    <param name="cartesian/problem_description"
        textfile="$(find awesome_leg_pholus)/config/cartesio/sliding_hip_cartesio.yaml"/>

    <include file="$(find cartesian_interface)/launch/cartesio.launch">
        <!-- Control frequency (Hz) -->
        <arg name="rate" value="100.0"/>
        <!-- Spawn RviZ interacrive markers -->
        <arg name="markers" value="true"/>
        <arg name="prefix" value="$(arg prefix)"/>
        <!-- Set to false for fixed base  -->
        <arg name="is_model_floating_base" value="false"/>
    </include>

    <node if="$(arg gui)"
            type="rviz"
            name="rviz"
            pkg="rviz"
            args="-d $(find awesome_leg_pholus)/rviz/sliding_hip_cartesio.rviz"/>
            output="screen"/>

</launch>
