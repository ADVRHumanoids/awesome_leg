<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <ReactiveFallback>
                <Condition ID="ArePluginsRunning"/>
                <Action ID="StartPlugins"/>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="ArePluginsRunning">
            <output_port default="false" name="all_plugins_running">whether all the plugins are successfully running or not</output_port>
        </Condition>
        <Action ID="StartPlugins"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
